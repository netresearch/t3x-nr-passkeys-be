{
    "name": "netresearch/nr-passkeys-be",
    "description": "Passwordless TYPO3 backend authentication via Passkeys (WebAuthn/FIDO2) - by Netresearch",
    "license": "GPL-2.0-or-later",
    "type": "typo3-cms-extension",
    "keywords": [
        "TYPO3",
        "passkeys",
        "webauthn",
        "fido2",
        "passwordless",
        "authentication",
        "backend"
    ],
    "authors": [
        {
            "name": "Netresearch DTT GmbH",
            "email": "typo3@netresearch.de",
            "homepage": "https://www.netresearch.de/",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/netresearch/t3x-nr-passkeys-be",
    "support": {
        "issues": "https://github.com/netresearch/t3x-nr-passkeys-be/issues",
        "source": "https://github.com/netresearch/t3x-nr-passkeys-be"
    },
    "require": {
        "php": "^8.2",
        "typo3/cms-core": "^13.4 || ^14.1",
        "typo3/cms-backend": "^13.4 || ^14.1",
        "typo3/cms-setup": "^13.4 || ^14.1",
        "web-auth/webauthn-lib": "^5.2"
    },
    "require-dev": {
        "captainhook/captainhook": "^5.28",
        "captainhook/hook-installer": "^1.0",
        "ergebnis/phpstan-rules": "^2.6",
        "friendsofphp/php-cs-fixer": "^3.68",
        "infection/infection": "^0.32",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.5",
        "saschaegerer/phpstan-typo3": "^2.0",
        "typo3/testing-framework": "^9.0",
        "phpat/phpat": "^0.12.2",
        "dg/bypass-finals": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "Netresearch\\NrPasskeysBe\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Netresearch\\NrPasskeysBe\\Tests\\": "Tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true,
            "infection/extension-installer": true,
            "phpstan/extension-installer": true,
            "captainhook/hook-installer": true
        },
        "bin-dir": ".Build/bin",
        "vendor-dir": ".Build/vendor"
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "nr_passkeys_be",
            "web-dir": ".Build/Web"
        },
        "captainhook": {
            "config": "Build/captainhook.json"
        }
    },
    "scripts": {
        "ci:lint:php": "php-cs-fixer fix --dry-run --diff --config Build/.php-cs-fixer.php",
        "ci:lint:php:fix": "php-cs-fixer fix --config Build/.php-cs-fixer.php",
        "ci:test:php:unit": "phpunit -c Build/phpunit.xml --testsuite unit",
        "ci:test:php:functional": "phpunit -c Build/phpunit.functional.xml",
        "ci:test:php:all": [
            "@ci:test:php:unit",
            "@ci:test:php:functional"
        ],
        "ci:stan": "phpstan analyse -c Build/phpstan.neon",
        "ci:test:php:fuzz": "phpunit -c Build/phpunit.xml --testsuite fuzz",
        "ci:mutation": "infection --configuration=Build/infection.json5 --min-msi=60 --min-covered-msi=75"
    }
}
