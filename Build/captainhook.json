{
    "config": {
        "bootstrap": "../.Build/vendor/autoload.php"
    },
    "commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Regex",
                "options": {
                    "regex": "#^(feat|fix|chore|docs|test|refactor|style|ci|perf|build|revert)(\\(.+\\))?: .{1,72}$#m"
                },
                "conditions": []
            }
        ]
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "composer ci:lint:php"
            },
            {
                "action": "composer ci:stan"
            },
            {
                "action": "composer ci:test:php:unit"
            },
            {
                "action": ".Build/bin/phpunit -c Build/phpunit.xml --testsuite fuzz --no-progress"
            }
        ]
    },
    "pre-push": {
        "enabled": true,
        "actions": [
            {
                "action": "composer ci:test:php:unit"
            }
        ]
    },
    "post-merge": {
        "enabled": true,
        "actions": [
            {
                "action": "composer install"
            }
        ]
    },
    "post-checkout": {
        "enabled": true,
        "actions": [
            {
                "action": "composer install"
            }
        ]
    }
}
